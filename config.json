  "app": {
    "name": "Test",
    "fullName": "Test - TBC ScoreBoard",
    "club": "Toulouse Basket Club",
    "team": "Équipe Loisirs",
    "motto": "Vamos Toros !",
    "version": "2.0.0",
    "matchDuration": 600
