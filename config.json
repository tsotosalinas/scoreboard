  "keyboard": {
    "shortcuts": [
      {
        "key": " ",
        "action": "toggleTimer",
        "description": "Démarrer/Arrêter le chrono"
      },
      {
        "key": "1",
        "action": "score1pt_home",
        "description": "HOME : +1 point"
      },
      {
        "key": "2",
        "action": "score2pt_home",
        "description": "HOME : +2 points"
      },
      {
        "key": "3",
        "action": "score3pt_home",
        "description": "HOME : +3 points"
      },
      {
        "key": "7",
        "action": "score1pt_visitor",
        "description": "VISITOR : +1 point"
      },
      {
        "key": "8",
        "action": "score2pt_visitor",
        "description": "VISITOR : +2 points"
      },
      {
        "key": "9",
        "action": "score3pt_visitor",
        "description": "VISITOR : +3 points"
      },
      {
        "key": "o",
        "action": "omg",
        "description": "OMG - Geste de classe"
      },
      {
        "key": "b",
        "action": "buzzer",
        "description": "Buzzer manuel"
      },
      {
        "key": "u",
        "action": "undoLastAction",
        "description": "Annuler dernière action"
      },
      {
        "key": "r",
        "action": "resetGame",
        "description": "Nouveau match"
      },
      {
        "key": "=",
        "action": "addTime",
        "params": { "seconds": 60 },
        "description": "+1 minute"
      },
      {
        "key": "-",
        "action": "addTime",
        "params": { "seconds": -60 },
        "description": "-1 minute"
      }
    ]
  },
  
  "rules": {
    "victoryConditions": {
      "enabled": true,
      "minScore": 15,
      "scoreDifference": 3,
      "playVictoryAnimation": true,
      "playVictorySound": true
    },
    "autoEndGame": false
  },
  
  "advanced": {
    "enableDebugMode": false,
    "logActions": true,
    "maxHistoryItems": 50,
    "autoSave": true,
    "configReloadKey": "F5"
  }
}